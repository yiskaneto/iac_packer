# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2
indent_style = space

# Windows-style newlines for Windows batch files
[**.bat]
end_of_line = crlf

# Indentation override for all HCL files
[**.hcl]
indent_style = space
indent_size = 2

# Indentation override for all JSON files
[**.json]
indent_style = space
indent_size = 2

# Indentation override for all shell script files
[**.sh]
indent_style = tab
indent_size = 4
